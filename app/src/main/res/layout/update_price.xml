<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_gap">

    <TextView
        android:id="@+id/tv_update_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textCapWords" android:text="Update the product price !"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.savesmart.SaveSmartEditText
        android:id="@+id/et_update_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_update_price"
        android:layout_marginTop="25dp"
        android:inputType="number"
        android:imeOptions="actionDone"/>

        <Spinner
            android:id="@+id/update_retailer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_update_price"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</RelativeLayout>