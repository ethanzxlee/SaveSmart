<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_gap"
                android:paddingBottom="16dp">

    <TextView
        android:id="@+id/product_view_price_section_retailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/product_view_price_section_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_view_price_section_retailer"
        android:textColor="#555"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/product_view_price_section_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_view_price_section_retailer"
        android:textColor="@color/themeAccentColor1"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_view_price_section_last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_view_price_section_price"
        android:fontFamily="sans-serif-light"
        android:textColor="#555"
        android:textSize="12sp"
        android:textStyle="italic"/>

</RelativeLayout>