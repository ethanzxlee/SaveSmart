<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_gap">

    <TextView
        android:id="@+id/tv_saved_list_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textCapWords" android:text="Give the list a name"/>

    <com.savesmart.SaveSmartEditText
        android:id="@+id/et_saved_list_create_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_saved_list_create"
        android:layout_marginTop="@dimen/default_gap"
        android:inputType="textCapWords"/>


</RelativeLayout>