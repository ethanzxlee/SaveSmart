<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/card_layout_product_inner_layout_id"
                xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/product_card_product_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:scaleType="centerCrop"/>

    <ToggleButton
        android:id="@+id/product_card_favourite"
        style="@style/SaveSmartFavouriteToogle"
        android:layout_width="36dp"
        android:layout_height="34.33dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"/>

    <RelativeLayout
        android:id="@+id/product_card_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_card_product_photo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/product_card_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/product_card_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/product_card_product_name"
            android:textColor="@color/themeColor"/>

    </RelativeLayout>

</RelativeLayout>