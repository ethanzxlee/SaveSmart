<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/display_product_Update"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:src="@drawable/update_price_icon"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_Layout_Img"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/display_Product_Image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:src="@drawable/retailer_giant"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/product_Layout_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/display_Product_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="17dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="ProductName"/>

        <TextView
            android:id="@+id/display_Product_Price_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_Product_Name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="17dp"
            android:textSize="15dp"
            android:text="Price : "/>

        <TextView
            android:id="@+id/display_Product_Low_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/display_Product_Price_Text"
            android:layout_below="@id/display_Product_Name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:text=" 10"/>

        <ToggleButton
            android:id="@+id/display_Product_Favourite_Icon"
            style="@style/SaveSmartFavouriteToogle"
            android:layout_width="36dp"
            android:layout_height="34.33dp"
            android:paddingTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"/>

        <ImageButton
            android:id="@+id/display_Product_Add_To_List_Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:layout_below="@id/display_Product_Favourite_Icon"
            android:src="@drawable/add_to_list"
            android:background="#00000000"/>


    </RelativeLayout>



</RelativeLayout>